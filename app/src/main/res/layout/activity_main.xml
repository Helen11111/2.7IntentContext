<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDAAFD"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/enter_btn"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/txt_btn_enter"
        />

    <Button
        android:id="@+id/open_file"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enter_btn"
        android:layout_marginTop="50dp"
        android:text="@string/txt_open"
        />

    <EditText
        android:id="@+id/edit_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_file"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/send_file"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/edit_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/txt_send" />

    <Button
        android:id="@+id/result"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/send_file"
        android:layout_marginTop="50dp"
        android:text="@string/txt_result"
        />



</RelativeLayout>